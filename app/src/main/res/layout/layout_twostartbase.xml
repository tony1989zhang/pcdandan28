<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    xmlns:TagViewGroup="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_base_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            style="@style/tv_title_twostart"
            android:text="基础号码" />
        <View
            android:layout_width="80dp"
            android:layout_height="2px"
            android:background="@color/black"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

            <com.xlidfwsscai525.module.suoshui.CheckBoxTagViewGroup
                android:id="@+id/checkbox_tags_view_group"
                style="@style/vg_twostart" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="6"
            >

            <TextView
                android:id="@+id/tv_base_big"
                style="@style/tv_twostart"
                android:text="大"
                />
            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line"
                />
            <TextView
                style="@style/tv_twostart"
                android:text="小"
                android:id="@+id/tv_base_small"
                />
            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line"
                />
            <TextView
                android:id="@+id/tv_base_odd"
                style="@style/tv_twostart"
                android:text="奇"
                />
            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line"
                />
            <TextView
                android:id="@+id/tv_base_even"
                style="@style/tv_twostart"
                android:text="偶"
                />
            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line"
                />
            <TextView
                android:id="@+id/tv_base_all"
                style="@style/tv_twostart"
                android:text="全"
                />
            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line"
                />
            <TextView
                android:id="@+id/tv_base_no"
                style="@style/tv_twostart"
                android:text="清"
                />
            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/line"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line"
            />
    </LinearLayout>
</LinearLayout>
