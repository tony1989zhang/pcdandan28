<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xlidfwsscai525.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单注中奖奖金:"
                android:textSize="@dimen/text_default_size" />

            <com.xlidfwsscai525.module.plan.LineEditText
                android:id="@+id/line_et"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:background="@null"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(例:173)"
                android:textSize="@dimen/text_default_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低盈利金额:"
                android:textSize="@dimen/text_default_size" />

            <com.xlidfwsscai525.module.plan.LineEditText
                android:id="@+id/line_et2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:background="@null"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(例:10)"
                android:textSize="@dimen/text_default_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划最好期数:"
                android:textSize="@dimen/text_default_size" />

            <com.xlidfwsscai525.module.plan.LineEditText
                android:id="@+id/line_et3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:background="@null"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(期:100)"
                android:textSize="@dimen/text_default_size" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:padding="15dp"
       >
        <Button
            android:id="@+id/btn_plan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/select_btn_red"
            android:textSize="@dimen/text_default_size"
            android:text="生成计划"
            android:textColor="@drawable/select_btn_red" />
        <TextView
            android:id="@+id/tv_zhjh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:layout_marginLeft="15dp"
            android:text="什么是追号计划？"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_default_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="期号" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:text="本期需投倍数（倍）" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:text="本期需投金额（元）" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:text="截止本期累计投入（元）" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="盈利(元)" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line"
        />
    <ListView
        android:id="@+id/listview_plan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
